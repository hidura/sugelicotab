<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="5sp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10sp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white_bk"
        android:typeface="sans"
        android:visibility="gone" />

    <Button
        android:id="@+id/cl_name_stylish"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:contentDescription="Este boton es para uso de la nueva version del sistema de pagos."
        android:text="Button"
        android:visibility="gone" />

    <Button
        android:id="@+id/cl_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:elevation="0dp"
        android:padding="5sp"
        android:text="No hay clientes registrados"
        android:textStyle="bold"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/wait_clientSend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sending_preacc"
            android:textAlignment="center"
            android:textColor="@color/colorBack"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>