<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_adaptador_productos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="230dp"
        android:layout_height="250dp"
        app:srcCompat="@android:color/background_light"
        android:id="@+id/prod_logo"
        android:layout_marginTop="66dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:visibility="gone" />

    <TextView
        android:text="Nombre del Producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prod_name"
        android:textSize="25sp"
        android:layout_below="@+id/prod_logo"
        android:layout_alignRight="@+id/prod_logo"
        android:layout_alignEnd="@+id/prod_logo"
        android:layout_alignLeft="@+id/prod_logo"
        android:layout_alignStart="@+id/prod_logo"
        android:textAlignment="textEnd"
        android:layout_marginTop="5dp"
        android:visibility="gone" />

    <Button
        android:text="Agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prod_name"
        android:layout_alignRight="@+id/prod_name"
        android:layout_alignEnd="@+id/prod_name"
        android:id="@+id/add_btn"
        android:layout_alignLeft="@+id/prod_name"
        android:layout_alignStart="@+id/prod_name"
        android:background="@android:color/holo_green_light"
        android:layout_marginTop="5dp"
        android:visibility="gone" />

    <Button
        android:text="Mesa 1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="23dp"
        android:id="@+id/table_btn"
        android:layout_alignTop="@+id/prod_logo"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <Button
        android:text="Area 1"
        android:layout_width="340dp"
        android:id="@+id/mobile_btn"
        android:layout_height="100dp"
        android:textSize="20sp"
        android:layout_alignTop="@+id/table_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp"
        android:visibility="gone" />

    <TextView
        android:text="Nombre del producto en factura"
        android:id="@+id/product_name"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:layout_below="@+id/prod_name"
        android:layout_toLeftOf="@+id/mobile_btn"
        android:layout_toStartOf="@+id/mobile_btn"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:visibility="gone" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/del_prod"
        android:layout_alignTop="@+id/product_name"
        android:layout_toRightOf="@+id/product_name"
        android:layout_toEndOf="@+id/product_name"
        android:background="@android:drawable/ic_delete"
        android:visibility="gone" />

</RelativeLayout>
